<script>
  var deck = [];

  {% if deck_source != blank %}
    {% for product in deck_source.products %}
      {% assign tarot_img = product.metafields.custom.tarot_front_image %}
      {% assign final_img_src = "" %}
      {% if tarot_img != blank %}
          {% assign img_str = tarot_img | append: "" %}
          {% if img_str contains "http" %} {% assign final_img_src = img_str %}
          {% else %} {% assign final_img_src = tarot_img | image_url: width: 800 %} {% endif %}
      {% else %}
          {% assign final_img_src = product.featured_image | image_url: width: 800 %}
      {% endif %}

      {% assign verdict = product.metafields.custom.tarot_decree | default: "ENTER THE VOID" | escape %}
      {% assign vendor_code = product.vendor | default: "UNK-000" | upcase %}

      deck.push({
        name: "{{ product.title | escape }}",
        url: "{{ product.url }}",
        image: "{{ final_img_src }}",
        decree: "{{ verdict }}",
        vendor: "{{ vendor_code }}"
      });
    {% endfor %}
  {% endif %}

  function startDivination() {
    if (deck.length === 0) return;
    document.getElementById('intro-layer').classList.add('hidden');
    
    var fate = deck[Math.floor(Math.random() * deck.length)];
    
    document.getElementById('fated-image').src = fate.image || "";
    document.getElementById('fated-decree-main').innerText = fate.decree;
    document.getElementById('fated-decree-back').innerText = fate.decree;
    document.getElementById('fated-name').innerText = fate.name;
    document.getElementById('fated-vendor').innerText = fate.vendor;
    document.getElementById('fated-link').href = fate.url;

    var resultLayer = document.getElementById('result-layer');
    resultLayer.classList.add('active');
    document.getElementById('card-inner').classList.remove('flipped');
  }

  function resetDivination() {
    document.getElementById('card-inner').classList.remove('flipped');
    document.getElementById('result-layer').classList.remove('active');
    setTimeout(function() { document.getElementById('fated-image').src = ""; }, 600);
    setTimeout(function() { document.getElementById('intro-layer').classList.remove('hidden'); }, 800);
  }
</script>
